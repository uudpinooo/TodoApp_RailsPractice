<h1 class="title">タスクの詳細</h1>
<table class="table w-100 mx-auto">
  <tbody>
    <tr>
      <th scope="row" class="w-25">タスク名</td>
      <td><%= @task.name %></td>
    <tr>
    <tr>
      <th scope="row" class="w-25">詳細</td>
      <td><%= simple_format @task.description %></td>
    <tr>
    <tr>
      <th scope="row" class="w-25">登録日時</td>
      <td><%= l @task.created_at %></td>
    <tr>
    <tr>
      <th scope="row" class="w-25">最終更新日時</td>
      <td><%= l @task.updated_at %></td>
    <tr>
  </tbody>
</table>
<%= link_to '編集', edit_task_path(@task), class: 'btn btn-primary me-3' %>
<%= link_to '削除', @task, method: :delete, data: { confirm: "#{@task.name}を削除します。よろしいですか？" }, class: 'btn btn-danger' %>