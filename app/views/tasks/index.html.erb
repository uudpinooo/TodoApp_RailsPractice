<h1 class="title">タスクの一覧</h1>
<%= link_to '新規登録', new_task_path, class: 'btn btn-primary mb-3' %>
<table class="table w-100 mx-auto">
  <thead>
    <tr>
      <th scope="col">タスク名</th>
      <th scope="col">登録日時</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, task_path(task) , class: 'text-dark' %></td>
      <td><%= task.created_at %></td>
      <td>
        <button class="btn btn-primary me-3">編集</button>
        <button class="btn btn-danger">削除</button>
      </td>
    </tr>
    <% end %>
    <tr>
  </tbody>
</table>